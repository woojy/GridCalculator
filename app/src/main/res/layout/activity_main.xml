<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="woojy.kr.hs.emirim.gridcalculator.MainActivity">

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
        android:id="@+id/but1"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="0"
            />

        <Button
            android:id="@+id/but2"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="1"
        />
        <Button
            android:id="@+id/but3"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="2"
            />
        <Button
            android:id="@+id/but4"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="3"
            />

        <Button
            android:id="@+id/but5"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="4"
            />
        <Button
            android:id="@+id/but6"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="5"
            />
        <Button
            android:id="@+id/but7"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="6"
            />
        <Button
            android:id="@+id/but8"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="7"
            />
        <Button
            android:id="@+id/but9"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="8"
            />
        <Button
            android:id="@+id/but10"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="9"
            />
    </GridLayout>
    <Button
        android:id="@+id/plus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="더하기"
        />
    <Button
        android:id="@+id/minus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="빼기"
        />
    <Button
        android:id="@+id/multiply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="곱하기"
        />
    <Button
        android:id="@+id/division"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나누기"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
